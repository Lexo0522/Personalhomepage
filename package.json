{
  "name": "rutua-personal-homepage",
  "version": "2.0.0",
  "description": "现代化、响应式的个人开发者主页，支持深色/浅色主题切换，集成GitHub仓库展示和博客文章列表",
  "main": "index.html",
  "scripts": {
    "start": "http-server -p 8000 -c-1 --cors",
    "dev": "http-server -p 8000 -c-1 --cors -o",
    "build": "node scripts/build.js",
    "clean": "node scripts/clean.js",
    "validate": "node scripts/validate.js",
    "deploy": "node scripts/deploy.js",
    "test": "echo \"No tests specified\" && exit 0",
    "lint": "eslint js/**/*.js",
    "format": "prettier --write \"**/*.{html,css,js,json,md}\""
  },
  "keywords": [
    "personal-homepage",
    "portfolio",
    "pwa",
    "responsive",
    "dark-mode",
    "github",
    "wordpress"
  ],
  "author": "Rutua",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Lexo0522/Personalhomepage.git"
  },
  "bugs": {
    "url": "https://github.com/Lexo0522/Personalhomepage/issues"
  },
  "homepage": "https://rutua.cn",
  "devDependencies": {
    "eslint": "^8.0.0",
    "prettier": "^3.0.0",
    "html-validate": "^8.0.0",
    "http-server": "^14.0.0"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}